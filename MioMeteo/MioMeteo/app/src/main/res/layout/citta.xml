<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="citta"
        android:id="@+id/cittaAdapterDB"
        android:layout_gravity="center_vertical"
        android:textSize="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:elegantTextHeight="false"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageButtonAdapterDB"
        android:src="@drawable/delete"
        android:backgroundTint="@android:color/transparent"
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arrowAdapterDB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/arrowAdapterDB" />

    <ImageView
        android:id="@+id/arrowAdapterDB"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignTop="@+id/cittaAdapterDB"
        android:layout_toRightOf="@+id/cittaAdapterDB"
        android:layout_alignBottom="@+id/cittaAdapterDB" />

</RelativeLayout>